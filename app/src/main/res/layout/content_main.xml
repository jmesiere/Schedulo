<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="@string/app_name" android:layout_width="300dp"
        android:layout_marginTop="100dp"
        android:textSize="40dp"
        android:paddingLeft="80dp"
        android:paddingTop="45dp"
        android:layout_height="150dp"
        android:id="@+id/title" />


    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:id="@+id/connect"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/register"
        android:layout_toStartOf="@+id/register" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/register"
        android:layout_alignTop="@+id/connect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_account"
        android:id="@+id/identifiant"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_password"
        android:id="@+id/password"
        android:layout_alignBaseline="@+id/password_input"
        android:layout_alignBottom="@+id/password_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/identifiant_input"
        android:layout_centerVertical="true"
        android:layout_marginTop="150dp"
        android:layout_alignRight="@+id/password_input"
        android:layout_alignEnd="@+id/title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_input"
        android:layout_toRightOf="@id/password"
        android:layout_below="@+id/identifiant_input"
        android:layout_alignRight="@+id/register"
        android:layout_alignEnd="@+id/register" />



</RelativeLayout>
